<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/workerProfile"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/profile_icon"
                app:civ_border_color="@color/grey"
                app:civ_border_width="@dimen/_3sdp"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_camera"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:layout_marginStart="@dimen/_35sdp"
                app:civ_circle_background_color="@color/yellow"
                app:civ_border_color="@color/yellow"
                app:civ_border_width="5dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/popins_regular"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:autofillHints="name"
                android:background="@drawable/custom_form_design"
                android:hint="@string/enterWorkerName"
                android:inputType="textCapWords"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popins_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/popins_regular"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:autofillHints="postalAddress"
                android:background="@drawable/custom_form_design"
                android:hint="@string/enterWorkerAddress"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popins_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/number"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/popins_regular"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:autofillHints="phone"
                android:background="@drawable/custom_form_design"
                android:hint="@string/enterWorkerPhoneNumber"
                android:inputType="phone"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popins_regular"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/wageRate"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/popins_regular"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/wage_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:background="@drawable/custom_form_design"
                android:hint="@string/enterWageRate"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/popins_regular"/>

            <Button
                android:id="@+id/add_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:paddingVertical="@dimen/_7sdp"
                android:text="@string/save"
                android:fontFamily="@font/popins_regular"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>