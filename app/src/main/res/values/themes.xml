    <!--for toolbar app title size    -->
    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>


    <!--for datePicker header and buttons color    -->
    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerButtonStyle</item>
